{
  "name": "split-demo",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "analyze": "better-npm-run analyze",
    "build": "npm run clean && better-npm-run build:prod",
    "build:dev": "npm run clean && better-npm-run build:dev",
    "clean": "trash build",
    "lint": "eslint src *.js",
    "prod": "better-npm-run start:prod",
    "start": "better-npm-run start:dev",
    "test": "npm run lint"
  },
  "betterScripts": {
    "analyze": {
      "command": "webpack --colors --hide-modules --progress --config config/analyze.js",
      "env": {
        "BABEL_DISABLE_CACHE": "1",
        "NODE_ENV": "production"
      }
    },
    "build:dev": {
      "command": "webpack --colors --hide-modules --progress",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build:prod": {
      "command": "webpack --colors --hide-modules --progress",
      "env": {
        "BABEL_DISABLE_CACHE": "1",
        "NODE_ENV": "production"
      }
    },
    "start:dev": {
      "command": "webpack-dev-server --progress",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start:prod": {
      "command": "webpack-dev-server --progress",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "author": "SÃ©bastien David",
  "license": "ISC",
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.0.0"
  },
  "devDependencies": {
    "babel-core": "~6.23.1",
    "babel-eslint": "~7.1.1",
    "babel-loader": "~6.3.2",
    "babel-plugin-transform-remove-console": "~6.8.0",
    "babel-plugin-transform-remove-debugger": "~6.8.0",
    "babel-preset-es2015": "~6.22.0",
    "babel-preset-react": "~6.23.0",
    "babel-preset-react-optimize": "~1.0.1",
    "babel-preset-stage-0": "~6.22.0",
    "better-npm-run": "0.0.14",
    "css-loader": "~0.26.1",
    "eslint": "~3.16.0",
    "eslint-config-airbnb": "~14.1.0",
    "eslint-plugin-import": "~2.2.0",
    "eslint-plugin-jsx-a11y": "~4.0.0",
    "eslint-plugin-react": "~6.10.0",
    "extract-text-webpack-plugin": "~2.0.0-rc.3",
    "file-loader": "~0.10.0",
    "html-webpack-plugin": "~2.28.0",
    "normalize.css": "~5.0.0",
    "react": "~15.4.2",
    "react-dom": "~15.4.2",
    "react-redux": "~5.0.2",
    "react-router": "~3.0.2",
    "redux": "~3.6.0",
    "style-loader": "~0.13.1",
    "trash-cli": "~1.4.0",
    "webpack": "~2.2.1",
    "webpack-bundle-analyzer": "~2.3.0",
    "webpack-dev-server": "~2.4.1",
    "webpack-merge": "~3.0.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "env": {
      "production": {
        "presets": [
          "react-optimize"
        ],
        "plugins": [
          "transform-remove-debugger"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "mocha": true
    },
    "rules": {
      "max-len": [
        2,
        120,
        2
      ],
      "no-console": 0,
      "import/no-extraneous-dependencies": 0,
      "react/jsx-filename-extension": 0
    }
  }
}
