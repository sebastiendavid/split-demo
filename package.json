{
  "name": "split-demo",
  "version": "1.0.0",
  "description": "Split demo",
  "main": "src/index.js",
  "author": "SÃ©bastien David",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:sebastiendavid/split-demo.git"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "scripts": {
    "analyze": "better-npm-run analyze",
    "build": "npm run clean && better-npm-run build:prod",
    "build:dev": "npm run clean && better-npm-run build:dev",
    "build:github": "npm run clean && better-npm-run build:github",
    "clean": "trash build",
    "format": "npm run prettier && npm run lint:fix",
    "lint": "eslint --cache --cache-location \"node_modules/.cache/eslint\" config src test *.js",
    "lint:fix": "eslint --fix config src test *.js",
    "prettier": "prettier --write \"{config,src,test}/**/*.{js,css,json}\"",
    "prod": "better-npm-run start:prod",
    "start": "better-npm-run start:dev",
    "test": "npm run lint",
    "wdio": "wdio test/wdio.conf.js"
  },
  "betterScripts": {
    "analyze": {
      "command": "webpack --hide-modules --progress --config config/analyze.js",
      "env": {
        "BABEL_DISABLE_CACHE": "1",
        "NODE_ENV": "production"
      }
    },
    "build:dev": {
      "command": "webpack --hide-modules --progress",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build:prod": {
      "command": "webpack --hide-modules --progress",
      "env": {
        "BABEL_DISABLE_CACHE": "1",
        "NODE_ENV": "production"
      }
    },
    "build:github": {
      "command": "webpack --hide-modules --progress",
      "env": {
        "BABEL_DISABLE_CACHE": "1",
        "NODE_ENV": "production",
        "GITHUB": "true"
      }
    },
    "start:dev": {
      "command": "webpack-dev-server --progress",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start:prod": {
      "command": "webpack-dev-server --progress",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "devDependencies": {
    "autoprefixer": "~8.1.0",
    "babel-core": "~6.26.0",
    "babel-eslint": "~8.2.2",
    "babel-loader": "~7.1.3",
    "babel-plugin-syntax-dynamic-import": "~6.18.0",
    "babel-plugin-transform-remove-console": "~6.9.0",
    "babel-plugin-transform-remove-debugger": "~6.9.0",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-env": "~1.6.1",
    "babel-preset-react": "~6.24.1",
    "babel-preset-react-optimize": "~1.0.1",
    "babel-preset-stage-2": "~6.24.1",
    "better-npm-run": "~0.1.0",
    "chai": "~4.1.2",
    "copy-webpack-plugin": "~4.5.0",
    "css-loader": "~0.28.10",
    "cssnano": "~4.0.0-rc.2",
    "cssnano-preset-advanced": "~4.0.0-rc.2",
    "dirty-chai": "~2.0.0",
    "eslint": "~4.18.2",
    "eslint-config-airbnb": "~16.1.0",
    "eslint-config-prettier": "~2.9.0",
    "eslint-plugin-import": "~2.9.0",
    "eslint-plugin-jsx-a11y": "~6.0.3",
    "eslint-plugin-react": "~7.7.0",
    "extract-text-webpack-plugin": "~4.0.0-beta.0",
    "file-loader": "~1.1.11",
    "history": "~4.7.2",
    "html-webpack-plugin": "~3.0.4",
    "image-webpack-loader": "~4.1.0",
    "moment": "~2.21.0",
    "normalize.css": "~8.0.0",
    "offline-plugin": "~4.9.0",
    "postcss-loader": "~2.1.1",
    "prettier": "~1.11.1",
    "prop-types": "~15.6.1",
    "react": "~16.2.0",
    "react-dom": "~16.2.0",
    "react-redux": "~5.0.7",
    "react-router": "~4.2.0",
    "react-router-dom": "~4.2.2",
    "redux": "~3.7.2",
    "redux-saga": "~0.16.0",
    "redux-thunk": "~2.2.0",
    "selenium-standalone": "~6.12.0",
    "style-loader": "~0.20.2",
    "trash-cli": "~1.4.0",
    "uglify-es": "~3.3.10",
    "uglifyjs-webpack-plugin": "~1.2.2",
    "wdio-mocha-framework": "~0.5.12",
    "wdio-selenium-standalone-service": "~0.0.9",
    "wdio-spec-reporter": "~0.1.3",
    "webdriverio": "~4.11.0",
    "webpack": "~4.0.1",
    "webpack-bundle-analyzer": "~2.11.1",
    "webpack-cli": "~2.0.10",
    "webpack-dev-server": "~3.1.0",
    "webpack-manifest-plugin": "~2.0.0-rc.1",
    "webpack-merge": "~4.1.2"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "chrome": 60,
            "firefox": 55,
            "safari": 11
          },
          "modules": false
        }
      ],
      "stage-2",
      "react"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "helpers": true,
          "polyfill": false,
          "regenerator": true
        }
      ],
      "syntax-dynamic-import"
    ],
    "env": {
      "production": {
        "presets": [
          "react-optimize"
        ],
        "plugins": [
          "transform-remove-debugger"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "prettier"
    ],
    "env": {
      "browser": true,
      "mocha": true
    },
    "globals": {
      "browser": true,
      "$": true
    },
    "rules": {
      "no-console": 0,
      "class-methods-use-this": 0,
      "import/no-extraneous-dependencies": 0,
      "react/jsx-filename-extension": 0
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
