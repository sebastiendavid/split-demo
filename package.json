{
  "name": "split-demo",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "analyze": "better-npm-run analyze",
    "build": "npm run clean && better-npm-run build:prod",
    "build:dev": "npm run clean && better-npm-run build:dev",
    "clean": "trash build",
    "format": "npm run prettier && npm run lint:fix",
    "lint": "eslint config src test *.js",
    "lint:fix": "eslint --fix config src test *.js",
    "prettier": "prettier --single-quote --trailing-comma es5 --write \"{config,src,test}/**/*.js\"",
    "prod": "better-npm-run start:prod",
    "start": "better-npm-run start:dev",
    "test": "npm run lint",
    "wdio": "wdio test/wdio.conf.js"
  },
  "betterScripts": {
    "analyze": {
      "command": "webpack --colors --hide-modules --progress --config config/analyze.js",
      "env": {
        "BABEL_DISABLE_CACHE": "1",
        "NODE_ENV": "production"
      }
    },
    "build:dev": {
      "command": "webpack --colors --hide-modules --progress",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build:prod": {
      "command": "webpack --colors --hide-modules --progress",
      "env": {
        "BABEL_DISABLE_CACHE": "1",
        "NODE_ENV": "production"
      }
    },
    "start:dev": {
      "command": "webpack-dev-server --progress",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start:prod": {
      "command": "webpack-dev-server --progress",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "author": "SÃ©bastien David",
  "license": "ISC",
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.0.0"
  },
  "devDependencies": {
    "babel-core": "~6.24.1",
    "babel-eslint": "~7.2.3",
    "babel-loader": "~7.0.0",
    "babel-plugin-syntax-dynamic-import": "~6.18.0",
    "babel-plugin-transform-remove-console": "~6.8.1",
    "babel-plugin-transform-remove-debugger": "~6.8.1",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-babili": "~0.0.12",
    "babel-preset-env": "~1.5.1",
    "babel-preset-react": "~6.24.1",
    "babel-preset-react-optimize": "~1.0.1",
    "babel-preset-stage-2": "~6.24.1",
    "babili-webpack-plugin": "~0.0.11",
    "better-npm-run": "~0.0.15",
    "chai": "~3.5.0",
    "copy-webpack-plugin": "~4.0.1",
    "css-loader": "~0.28.2",
    "dirty-chai": "~1.2.2",
    "eslint": "~3.19.0",
    "eslint-config-airbnb": "~15.0.1",
    "eslint-plugin-import": "~2.2.0",
    "eslint-plugin-jsx-a11y": "~5.0.3",
    "eslint-plugin-react": "~7.0.1",
    "extract-text-webpack-plugin": "~2.1.0",
    "file-loader": "~0.11.0",
    "html-webpack-plugin": "~2.28.0",
    "image-webpack-loader": "~3.3.1",
    "moment": "~2.18.1",
    "normalize.css": "~7.0.0",
    "offline-plugin": "~4.8.1",
    "prettier": "~1.3.1",
    "prop-types": "~15.5.10",
    "react": "~15.5.4",
    "react-dom": "~15.5.4",
    "react-redux": "~5.0.5",
    "react-router": "~4.1.1",
    "react-router-dom": "~4.1.1",
    "redux": "~3.6.0",
    "redux-thunk": "~2.2.0",
    "selenium-standalone": "~6.4.1",
    "style-loader": "~0.18.0",
    "trash-cli": "~1.4.0",
    "wdio-mocha-framework": "~0.5.10",
    "wdio-selenium-standalone-service": "~0.0.8",
    "wdio-spec-reporter": "~0.1.0",
    "webdriverio": "~4.8.0",
    "webpack": "~2.5.1",
    "webpack-bundle-analyzer": "~2.8.2",
    "webpack-dev-server": "~2.4.5",
    "webpack-manifest-plugin": "~1.1.0",
    "webpack-merge": "~4.1.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "chrome": 55,
            "firefox": 50,
            "safari": 10
          },
          "modules": false
        }
      ],
      "stage-2",
      "react"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "helpers": true,
          "polyfill": false,
          "regenerator": true
        }
      ],
      "syntax-dynamic-import"
    ],
    "env": {
      "production": {
        "presets": [
          "react-optimize"
        ],
        "plugins": [
          "transform-remove-debugger"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "mocha": true
    },
    "globals": {
      "browser": true,
      "$": true
    },
    "rules": {
      "max-len": [
        2,
        120,
        2
      ],
      "no-console": 0,
      "import/no-extraneous-dependencies": 0,
      "react/jsx-filename-extension": 0,
      "class-methods-use-this": 0
    }
  }
}
