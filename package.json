{
  "name": "split-demo",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "build": "better-npm-run build",
    "clean": "trash build",
    "lint": "eslint src *.js",
    "prod": "better-npm-run start:prod",
    "start": "better-npm-run start:dev",
    "test": "npm run lint"
  },
  "betterScripts": {
    "build": {
      "command": "webpack --progress --optimize-dedupe --optimize-occurrence-order",
      "env": {
        "BABEL_DISABLE_CACHE": "1",
        "NODE_ENV": "production"
      }
    },
    "start:dev": {
      "command": "webpack-dev-server --inline --hot --progress --colors -d --history-api-fallback",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start:prod": {
      "command": "webpack-dev-server --inline --hot --progress --colors --history-api-fallback",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "author": "SÃ©bastien David",
  "license": "ISC",
  "engines": {
    "node": ">=4.5.0",
    "npm": ">=3.0.0"
  },
  "devDependencies": {
    "babel-core": "~6.16.0",
    "babel-eslint": "~7.0.0",
    "babel-loader": "~6.2.5",
    "babel-plugin-transform-remove-console": "~6.8.0",
    "babel-plugin-transform-remove-debugger": "~6.8.0",
    "babel-preset-es2015": "~6.16.0",
    "babel-preset-es2016": "~6.16.0",
    "babel-preset-es2017": "~6.16.0",
    "babel-preset-react": "~6.16.0",
    "babel-preset-react-hmre": "~1.1.1",
    "babel-preset-react-optimize": "~1.0.1",
    "better-npm-run": "0.0.11",
    "css-loader": "~0.25.0",
    "eslint": "~3.7.0",
    "eslint-config-airbnb": "~12.0.0",
    "eslint-import-resolver-webpack": "~0.6.0",
    "eslint-plugin-import": "~1.16.0",
    "eslint-plugin-jsx-a11y": "~2.2.2",
    "eslint-plugin-react": "~6.3.0",
    "extract-text-webpack-plugin": "~1.0.1",
    "file-loader": "~0.9.0",
    "html-webpack-plugin": "~2.22.0",
    "normalize.css": "~4.2.0",
    "react": "~15.3.2",
    "react-dom": "~15.3.2",
    "react-router": "~2.8.1",
    "style-loader": "~0.13.1",
    "trash-cli": "~1.4.0",
    "webpack": "~1.13.2",
    "webpack-dev-server": "~1.16.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "es2016",
      "es2017",
      "react"
    ],
    "env": {
      "production": {
        "presets": [
          "react-optimize"
        ],
        "plugins": [
          "transform-remove-debugger",
          "transform-remove-console"
        ]
      },
      "development": {
        "presets": [
          "react-hmre"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": [
      "import"
    ],
    "env": {
      "browser": true,
      "mocha": true
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "webpack.config.js"
        }
      }
    },
    "rules": {
      "max-len": [
        2,
        120,
        2
      ],
      "no-console": 0,
      "import/no-extraneous-dependencies": 0,
      "react/jsx-filename-extension": 0
    }
  },
  "moduleRoots": [
    "./",
    "./src"
  ]
}
